{
    "languageserver": {
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": ["dockerfile"],
            "args": ["--stdio"]
            }
    },
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod"],
            "filetypes": ["go"]
        }
    },
    "languageserver": {
      "sql": {
        "command": "sql-language-server",
        "args" : ["up", "--method", "stdio"],
        "filetypes": ["sql", "mysql"]
        }  
    }
}
